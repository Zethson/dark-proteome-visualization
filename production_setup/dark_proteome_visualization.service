[Unit]
Description=Gunicorn instance to serve dark_proteome_visualization
After=network.target

[Service]
User=brett
Group=www-data
WorkingDirectory=/home/brett/dark-proteome-visualization
Environment="PATH=/home/brett/dark-proteome-visualization/dpenv/bin"
ExecStart=/home/brett/dark-proteome-visualization/dpenv/bin/gunicorn --workers 3 --bind unix:dark-proteome-visualization.sock -m 007 dark_proteome_visualization.app:app

[Install]
WantedBy=multi-user.target